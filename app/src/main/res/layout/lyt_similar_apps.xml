<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnr_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/margin10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_grad_unselected"
        android:orientation="horizontal"
        android:padding="15dp">

        <ImageView
            android:id="@+id/img_app_icon"
            android:layout_width="@dimen/width50"
            android:layout_height="@dimen/height50"
            android:layout_gravity="center"
            android:src="@drawable/islam360" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/def_margin"
            android:gravity="center"
            android:orientation="vertical">


            <com.alquran.assudais.Utilities.AutoScrollableTextView
                android:id="@+id/txt_app_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/similar_app_name"
                android:textColor="@color/black"
                android:textSize="@dimen/def_lbl_size" />

            <com.alquran.assudais.Utilities.AutoScrollableTextView
                android:id="@+id/txt_install_app"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="@string/install_app"
                android:textColor="@color/black"
                android:textSize="@dimen/def_hint_size" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>